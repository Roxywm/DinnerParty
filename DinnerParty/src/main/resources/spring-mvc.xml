<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.2.xsd
http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<!-- 全注解方式 -->
	<!-- 配置扫描Controller的包 -->
	<context:component-scan base-package="com.roxy.maven.dp.controller" />
    
    <!-- 启用MVC注解 -->
    <mvc:annotation-driven/>
	
	<!-- 视图解析器 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
         <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
         <!-- jsp页面放到WEB-INF目录下 -->
         <property name="prefix" value="/WEB-INF/" />
         <!-- 页面的后缀为jsp -->
         <property name="suffix" value=".jsp" />
    </bean>

	<!-- 静态资源不拦截 -->
	<mvc:resources mapping="/static/**" location="/static/" />

	<!-- 拦截器配置 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/manager/**"/><!-- 需要拦截的url -->
			<mvc:mapping path="/super/**"/><!-- 需要拦截的url -->
			<mvc:mapping path="/super/**"/><!-- 需要拦截的url -->
			<mvc:mapping path="/super/**"/><!-- 需要拦截的url -->
			<mvc:mapping path="/super/**"/><!-- 需要拦截的url -->
			<mvc:mapping path="/super/**"/><!-- 需要拦截的url -->
			<mvc:exclude-mapping path="/user/login"/><!-- 排除url，不拦截此url -->
			<mvc:exclude-mapping path="/user/logout"/><!-- 排除url，不拦截此url -->
			<bean class="com.roxy.maven.dp.intercetor.LoginIntercetor"></bean><!-- 拦截器类 -->
		</mvc:interceptor>
	</mvc:interceptors>
	
	<!-- 配置不需要经过controller就可以直接访问WEB-INF目录下的页面
	<mvc:view-controller path="/login" view-name="login"/>
	<mvc:view-controller path="/register" view-name="register"/> -->

	<!--&lt;!&ndash; 文件上传配置 &ndash;&gt;-->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<!-- 最大上传10M的文件 -->
		<property name="maxUploadSize" value="10485760"></property>
		<property name="defaultEncoding" value="utf-8"></property>
		<property name="resolveLazily" value="true" /><!-- 延迟解析（把上传异常交给Controller处理） -->
	</bean>

</beans>